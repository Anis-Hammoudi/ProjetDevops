version: '3.8'

services:
  nginx:
    image: nginx:{{ nginx_version }}
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ docker_stack_path }}/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - {{ ssl_cert_path }}:/etc/nginx/ssl:ro
      - letsencrypt_data:/etc/letsencrypt:ro
    networks:
      - {{ swarm_network_name }}
    deploy:
      mode: replicated
      replicas: {{ nginx_replicas }}
      placement:
        constraints:
          - node.role == worker
      update_config:
        parallelism: 1
        delay: 10s
        failure_action: rollback
      rollback_config:
        parallelism: 1
        delay: 10s
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M
    depends_on:
      - glpi

  glpi:
    image: diouxx/glpi:{{ glpi_version }}
    environment:
      - TIMEZONE=Europe/Paris
      - MARIADB_HOST=mariadb
      - MARIADB_PORT=3306
      - MARIADB_DATABASE={{ mariadb_database }}
      - MARIADB_USER={{ mariadb_user }}
      - MARIADB_PASSWORD={{ mariadb_password }}
    volumes:
      - glpi_data:/var/www/html/glpi
      - glpi_plugins:/var/www/html/glpi/plugins
      - glpi_files:/var/www/html/glpi/files
    networks:
      - {{ swarm_network_name }}
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M
    depends_on:
      - mariadb

  mariadb:
    image: mariadb:{{ mariadb_version }}
    environment:
      - MYSQL_ROOT_PASSWORD={{ mariadb_root_password }}
      - MYSQL_DATABASE={{ mariadb_database }}
      - MYSQL_USER={{ mariadb_user }}
      - MYSQL_PASSWORD={{ mariadb_password }}
    volumes:
      - mariadb_data:/var/lib/mysql
    networks:
      - {{ swarm_network_name }}
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M

  certbot:
    image: certbot/certbot:latest
    volumes:
      - letsencrypt_data:/etc/letsencrypt
      - certbot_www:/var/www/certbot
    entrypoint: "/bin/sh -c 'trap exit TERM; while :; do certbot renew; sleep 12h & wait $${!}; done;'"
    networks:
      - {{ swarm_network_name }}
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s

networks:
  {{ swarm_network_name }}:
    driver: overlay
    attachable: true

volumes:
  mariadb_data:
    driver: local
  glpi_data:
    driver: local
  glpi_plugins:
    driver: local
  glpi_files:
    driver: local
  letsencrypt_data:
    driver: local
  certbot_www:
    driver: local
